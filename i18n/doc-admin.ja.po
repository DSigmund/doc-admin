#: en/content/customization/process-management.xml:3365
#, no-wrap
msgid ""
"$Self->{TicketAcl}->{'200-ACL-Process'} = {\n"
"    # match properties\n"
"    Properties => {\n"
"        User => {\n"
"            UserID => [2, 3],\n"
"        },\n"
"    },\n"
"    Possible => {\n"
"       Process => ['P1', 'P2', 'P3'],\n"
"    },\n"
"    PossibleNot => {\n"
"        Process => ['P4'],\n"
"    },\n"
"};\n"
"                    "
msgstr ""
"$Self->{TicketAcl}->{'200-ACL-Process'} = {\n"
"    # match properties\n"
"    Properties => {\n"
"        User => {\n"
"            UserID => [2, 3],\n"
"        },\n"
"    },\n"
"    Possible => {\n"
"       Process => ['P1', 'P2', 'P3'],\n"
"    },\n"
"    PossibleNot => {\n"
"        Process => ['P4'],\n"
"    },\n"
"};\n"
"                    "

#. type: Content of: <section><section><section><section><para><screen>
#: en/content/customization/process-management.xml:3383
#, no-wrap
msgid ""
"$Self->{TicketAcl}->{'201-ACL-Process'} = {\n"
"    # match properties\n"
"    Properties => {\n"
"        User => {\n"
"            Group_rw => [ 'MyGroup' ],\n"
"        },\n"
"    },\n"
"    Possible => {\n"
"       Process => ['P1', 'P2', 'P3'],\n"
"    },\n"
"    PossibleNot => {\n"
"        Process => ['P4'],\n"
"    },\n"
"};\n"
"                    "
msgstr ""
"$Self->{TicketAcl}->{'201-ACL-Process'} = {\n"
"    # match properties\n"
"    Properties => {\n"
"        User => {\n"
"            Group_rw => [ 'MyGroup' ],\n"
"        },\n"
"    },\n"
"    Possible => {\n"
"       Process => ['P1', 'P2', 'P3'],\n"
"    },\n"
"    PossibleNot => {\n"
"        Process => ['P4'],\n"
"    },\n"
"};\n"
"                    "

#. type: Content of: <section><section><section><section><para><screen>
#: en/content/customization/process-management.xml:3401
#, no-wrap
msgid ""
"$Self->{TicketAcl}->{'202-ACL-Process'} = {\n"
