"        CreateBy   => '1',                   # optional\n"
"        ChangeTime => '15-03-2012 13:37:00', # optional\n"
"        ChangeBy   => '15-03-2012 13:37:00', # optional\n"
"        Condition  => {\n"
"            Cond1  => {\n"
"                Fields => {\n"
"                    StateID => {\n"
"                        Type  => 'String',\n"
"                        Match => '1',\n"
"                    },\n"
"                },\n"
"            },\n"
"        },\n"
"    },\n"
